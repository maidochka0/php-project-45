#!/usr/bin/env php
<?php

require_once("/home/maid/project-1/src/Cli.php");
require_once("/home/maid/project-1/src/Engine.php");

print_r("Welcome to the Brain Games!\n");
$userName = \Project1\Cli\userName();
print_r('Answer "yes" if the number is even, otherwise answer "no".');
echo "\n";
$countTrueAns = 0;
$ansTask = 3;
while ($countTrueAns < $ansTask) {
    $questNumb = rand(0, 100);
    if ($questNumb % 2 === 0) {
        $questAns = "yes";
    } else {
        $questAns = "no";
    }
    print_r("Question: {$questNumb}\n");
    $countTrueAns = \Project1\Engine\checkAns($userName, $questAns) ? $countTrueAns + 1 : 0;
}
print_r("Congratulations, {$userName}!\n");
