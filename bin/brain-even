#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

\Project1\Engine\welcome();
$userName = \Project1\Cli\userName();
print_r('Answer "yes" if the number is even, otherwise answer "no".');
echo "\n";
$countTrueAns = 0;
$ansLimit = 3;
while ($countTrueAns < $ansLimit) {
    $questNumb = rand(0, 100);
    if ($questNumb % 2 === 0) {
        $questAns = "yes";
    } else {
        $questAns = "no";
    }
    print_r("Question: {$questNumb}\n");
    $countTrueAns = \Project1\Engine\checkAns($userName, $questAns) ? $countTrueAns + 1 : 0;
}
\Project1\Engine\congratulations($userName);